      <a href="/admin" class="<%= title === 'Dashboard' ? 'active' : '' %>">Dashboard</a>
      <a href="/admin/extraction" class="<%= title === 'Extraction' ? 'active' : '' %>">Extraction</a>
      <a href="/admin/leads" class="<%= title === 'Leads' ? 'active' : '' %>">Leads</a>
      <a href="/admin/categories" class="<%= title === 'Categories' ? 'active' : '' %>">Categories</a>
      <a href="/admin/messages" class="<%= title === 'Messages' ? 'active' : '' %>">Messages</a>
      <a href="/admin/analytics" class="<%= title === 'Analytics' ? 'active' : '' %>">Analytics</a>
    </nav>
  </div>
